{
  "name": "product-template",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/secundant/product-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/secundant/product-template"
  },
  "author": {
    "name": "Dmitry Remezov",
    "url": "https://github.com/secundant"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "nextjs",
    "nx"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0 || >=18.0.0",
    "yarn": ">=3.2.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@4.0.0-rc.52",
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*"
  ],
  "scripts": {
    "clean-node_modules": "yarn dlx rimraf '**/node_modules'",
    "check-install": "yarn dlx @yarnpkg/doctor .",
    "postinstall": "is-ci || yarn husky install",
    "release-version": "yarn changeset version && yarn nx format:write",
    "release-publish": "yarn nx affected:build && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@neodx/autobuild": "0.1.0",
    "eslint": "8.51.0",
    "eslint-kit": "10.5.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "14.0.1",
    "nx": "16.10.0",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.5",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.6"
  },
  "resolutions": {
    "vite": "4.4.11"
  }
}
