{
  "name": "product-template",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/secundant/product-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/secundant/product-template"
  },
  "author": {
    "name": "Dmitry Remezov",
    "url": "https://github.com/secundant"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "nextjs",
    "nx"
  ],
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@4.0.2",
  "workspaces": [
    "apps/*",
    "libs/*",
    "tools/*"
  ],
  "scripts": {
    "postinstall": "is-ci || yarn lefthook install",
    "release-version": "yarn changeset version && yarn nx format:write",
    "release-publish": "yarn nx affected:build && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "eslint": "8.54.0",
    "eslint-kit": "10.6.0",
    "is-ci": "3.0.1",
    "lefthook": "1.5.3",
    "nx": "17.1.3",
    "prettier": "3.1.0",
    "prettier-plugin-tailwindcss": "0.5.7",
    "typescript": "5.3.2",
    "vite": "5.0.2",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "0.34.6"
  }
}
